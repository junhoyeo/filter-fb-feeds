{
  "manifest_version": 2,
  "name": "filter-fb-feeds",
  "description": "Hide feeds that contain specific keywords on Facebook",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/"],
      "js": ["background.js"]
    },
    {
      "matches": ["*://www.facebook.com/groups/*"],
      "js": ["background.js"]
    }
  ],
  "permissions": ["http://*/*", "https://*/*", "storage"]
}
